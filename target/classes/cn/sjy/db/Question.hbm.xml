<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<!-- ORM映射配置 -->
<hibernate-mapping package="cn.sjy.db">
	<!-- name:类名 table:表名 -->
	<class name="cn.sjy.db.Question" table="t_question">
		<!-- 主键 -->
		<id name="id" column="c_id" type="java.lang.Integer">
			<generator class="identity" />
		</id>

		<!-- 其他属性 -->
		<property name="questionName" column="c_questionname"
			type="java.lang.String"></property>
		<property name="questionDetails" column="c_questionDetails"
			type="java.lang.String"></property>
	</class>
</hibernate-mapping>   
