<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee  
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<!-- 错误页面跳转。 -->
	<error-page>
		<error-code>404</error-code>
		<location>/index.jsp</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/index.jsp</location>
	</error-page>

	<!-- 起始页面 -->
	<welcome-file-list>
		<welcome-file>/index.jsp</welcome-file>
	</welcome-file-list>

	<!-- 登陆权限的判断。 -->
	<filter>
		<filter-name>isLogInFilter</filter-name>
		<filter-class>cn.sjy.utils.IsLogInFilter</filter-class>
		<init-param>
			<param-name>passURL</param-name>
			<param-value>index.jsp;logIn.jsp;goToLogInAction.do;loginAction.do</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>isLogInFilter</filter-name>
		<url-pattern>*.jsp</url-pattern>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>

	<!-- 教师权限的判断。 -->
	<filter>
		<filter-name>isTeacherFilter</filter-name>
		<filter-class>cn.sjy.utils.IsTeacherFilter</filter-class>
		<init-param>
			<param-name>filterURL</param-name>
			<param-value>goToTeacherPanelAction.do;teacherPanel.jsp</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>isTeacherFilter</filter-name>
		<url-pattern>*.jsp</url-pattern>
		<url-pattern>*.do</url-pattern>
	</filter-mapping>

	<!-- 定义Struts2.5核心控制器。 -->
	<filter>
		<filter-name>struts2</filter-name>
		<filter-class>org.apache.struts2.dispatcher.filter.StrutsPrepareAndExecuteFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
</web-app>
